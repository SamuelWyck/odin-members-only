<header>
    <a class="home-link" href="/">
        <div class="logo-wrapper">
            <img class="logo" src="/logo.svg" alt="">
            <p class="logo-banner">The Club</p>
        </div>
    </a>
    <button class="main-menu-btn">
        <img class="main-menu-img" src="/menu.svg" alt="menu">
    </button>
    <% if (locals.user) { %>
        <nav>
            <a href="/auth/member">Membership</a>
            <a href="/auth/admin">Admin</a>
            <div class="user-menu-wrapper">
                <button class="user-btn"><span class="username-span"><%= locals.user.username %></span> <img class="user-menu-img rotate" src="/menu-arrow.svg" alt="arrow"></button>
                <div class="user-menu hidden">
                    <p class="status">Member <img class="status-img" src="/<%= (locals.user.member) ? 'true' : 'false' %>.svg" alt="status"></p>
                    <p class="status">Admin <img class="status-img" src="/<%= (locals.user.admin) ? 'true' : 'false' %>.svg" alt="status"></p>
                    <hr>
                    <a href="/logout">Logout</a>
                </div>
            </div>
        </nav>
    <% } else { %>
        <nav>
            <a href="/signup">Sign Up</a>
            <a href="/login">Log In</a>
        </nav>
    <% } %>
</header>